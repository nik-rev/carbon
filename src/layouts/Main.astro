---
import "@/tailwind.css"

const currentPath = Astro.url.pathname;

const { title } = Astro.props;
---
<html lang="en" class="h-full bg-black">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-black h-full flex flex-col">
		<nav class="bg-gray-6 w-full py-4 text-gray-2 mb-10 font-mono shadow-sm px-6">
			<div class="max-w-prose flex justify-between mx-auto">
				<ul class="flex gap-x-8 *:hover:text-gray-1 *:hover:underline">
				  <li class={currentPath == "/" ? "underline" : ""}><a href="/">home</a></li>
				  <li class={currentPath == "/blog/" ? "underline" : ""}><a href="/blog">blog</a></li>
				  <li class={currentPath == "/projects/" ? "underline" : ""}><a href="/projects">projects</a></li>
				</ul>
			</div>
		</nav>
	  <slot />
		<footer class="w-full bg-gray-6 text-center py-4 text-gray-2 mt-auto">
			Made with ðŸ’š by Nikita
		</footer>
	</body>
</html>
